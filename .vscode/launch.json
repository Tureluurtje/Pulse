{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn (debug)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "asgi_app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true,
      "subProcess": true
    },
    {
      "name": "FastAPI: Uvicorn (reload)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "asgi_app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true,
      "subProcess": true
    },
    {
      "name": "Attach to debugpy (5678)",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": true
    }
  ]
}
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/api/"
        },
        {
            "name": "Python: Debug Tests (pytest)",
            "type": "python",
            "request": "test",
            "purpose": ["debug-test"],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/api"
            },
            "console": "integratedTerminal"
        }
    ]
}
